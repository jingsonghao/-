/*列表样式*/
.classification-list{
    width: 100%;
    padding: 20px;
}
.classification-list li{
    line-height: 32px;
    color: #fff;
    cursor: pointer;
}
.classification-list li:hover{
    color: #2da0bd;
}
.classification-list li:before{
    content: " ";
    display: inline-block;
    margin-right: 10px;
    width: 8px;
    height: 8px;
    border-radius: 3px;
    background-color: #fff;
    box-shadow: inset 0 0 2px #999;
}
.classification-list li span{
    padding-right: 10px;
}
.classification-list li a{
    padding-right: 5px;
    color: #fff;
}
.deep-page {
    margin: 20px 0 30px 0;
    text-decoration: underline;
    color: #fff;
}
/*列表样式 end*/