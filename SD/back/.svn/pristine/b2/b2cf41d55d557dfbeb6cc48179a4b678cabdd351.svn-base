
/*选项卡样式*/
.tab-btn-list{
    text-align: center;
}
.tab-btn-list .tab-btn{
    display:-webkit-box;
    display:-webkit-flex;
    display:-ms-flexbox;
    display:flex;
    color: #fff;
    margin-bottom: 0;
    text-align: center;
    line-height: 36px;
}
.tab-btn-list .tab-btn > li{
    -webkit-box-flex: 1;
    -moz-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
}
.tab-btn-list .tab-btn > li a{
    display: block;
    color: #fff;
    text-decoration: none;
}
.tab-btn-list .tab-btn > li.active a{
    color: #54d4f1;
}